{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "target": "es6",
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom",
      "es2020"
    ],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
